<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_bold_32">
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="text_medium_22">
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="text_medium_16">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="text_regular_16">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="text_regular_12">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="element_vacancy_short_m22" parent="text_medium_22">
        <item name="android:textColor">?attr/colorOnPrimary</item>>
    </style>

    <style name="element_vacancy_short_m16" parent="text_regular_16">
        <item name="android:textColor">?attr/colorOnPrimary</item>>
    </style>

    <style name="FilterStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="errorEnabled">false</item>

    </style>

    <style name="FilterOptionStyle">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/edittext_color</item>
        <item name="android:textColorHint">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="PlaceholderTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SalaryEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/filter_edittext_color</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/cursor_blue</item>
        <item name="colorControlActivated">@color/blue</item>

    </style>

    <style name="FilterText">
        <item name="android:textColor">?attr/not_show_without_salary_color</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="FilterFrameLayoutSettings" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingEnd">@dimen/margin_16</item>

        <item name="boxCornerRadiusBottomEnd">@dimen/margin_12</item>
        <item name="endIconTint">?attr/filter_edittext_color</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_12</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_12</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_12</item>

        <item name="hintTextColor">@color/hint_selector</item>
        <item name="android:textColorHint">@color/hint_selector</item>
        <item name="hintTextAppearance">@style/HintTextStyle</item>

        <item name="boxCollapsedPaddingTop">@dimen/margin_8</item>
        <item name="placeholderTextAppearance">@style/PlaceholderTextStyle</item>
        <item name="placeholderTextColor">?attr/colorOnSecondary</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="FilterBottomButtonsStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="SearchInputStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edit</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
    </style>

    <style name="vacancy_recycler">
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="layout_constraintVertical_bias">0.0</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="ItemFilterStyle">
    <item name="android:textSize">@dimen/text_size_16</item>
    <item name="android:fontFamily">@font/ys_display_regular</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="android:maxLines">2</item>
    <item name="android:ellipsize">end</item>
    </style>

</resources>
